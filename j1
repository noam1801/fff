local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "JumpScare Hub",
    LoadingTitle = "JumpScare Hub",
    LoadingSubtitle = "by Noam",
    Theme = "Ocean",
    ToggleUIKeybind = "K",
})

local JumpTab = Window:CreateTab("JumpScare", 4483362458)
local JumpSection = JumpTab:CreateSection("Settings")

local plr = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = plr:WaitForChild("PlayerGui")

-- משתנה Toggle
local JumpScareEnabled = false

-- זמן שה-JumpScare נשאר
local JumpScareDuration = 1.5

-- תמונה וסאונד JumpScare
local JumpScareImage = "rbxassetid://INSERT_YOUR_IMAGE_ID_HERE"
local JumpScareSound = "rbxassetid://INSERT_YOUR_SOUND_ID_HERE"

-- פונקציה להצגת JumpScare
local function ShowJumpScare()
    if not JumpScareEnabled then return end -- אם Toggle כבוי, לא קופץ
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1,0,1,0)
    frame.Position = UDim2.new(0,0,0,0)
    frame.BackgroundColor3 = Color3.new(0,0,0)
    frame.BackgroundTransparency = 0.3
    frame.Parent = gui

    local image = Instance.new("ImageLabel")
    image.Size = UDim2.new(0.5,0,0.5,0)
    image.Position = UDim2.new(0.25,0,0.25,0)
    image.Image = JumpScareImage
    image.BackgroundTransparency = 1
    image.Parent = frame

    local sound = Instance.new("Sound")
    sound.SoundId = JumpScareSound
    sound.Volume = 1
    sound.Parent = frame
    sound:Play()

    delay(JumpScareDuration, function()
        frame:Destroy()
    end)
end

-- Toggle Button
JumpSection:CreateToggle({
    Name = "JumpScare ON/OFF",
    CurrentValue = false,
    Flag = "JumpScareToggle",
    Callback = function(Value)
        JumpScareEnabled = Value
    end
})

-- דוגמה: JumpScare מופעלת כל 5 שניות אם Toggle ON
spawn(function()
    while true do
        wait(5)
        ShowJumpScare()
    end
end)
