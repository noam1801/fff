local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Modern Menu",
   LoadingTitle = "טוען תפריט...",
   LoadingSubtitle = "Rayfield GUI",
   Theme = "Ocean",
   ToggleUIKeybind = "K",
})

-- יצירת Tab עם תמונה
local MovementTab = Window:CreateTab("Movement", 4483362458) -- Title, Image
local MovementSection = MovementTab:CreateSection("Adjust Movement")

local WalkSpeedValue = 16
local JumpPowerValue = 50

-- Slider עבור WalkSpeed
local WalkSlider = MovementSection:CreateSlider({
    Name = "WalkSpeed",
    Range = {16, 300},
    Increment = 1,
    Suffix = "Stud/s",
    CurrentValue = WalkSpeedValue,
    Flag = "WalkSpeedSlider", -- חשוב לשים Flag ייחודי
    Callback = function(Value)
        WalkSpeedValue = Value
        local plr = game.Players.LocalPlayer
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.WalkSpeed = Value end
    end,
})

-- Slider עבור JumpPower
local JumpSlider = MovementSection:CreateSlider({
    Name = "JumpPower",
    Range = {50, 400},
    Increment = 1,
    Suffix = "",
    CurrentValue = JumpPowerValue,
    Flag = "JumpPowerSlider", -- Flag ייחודי
    Callback = function(Value)
        JumpPowerValue = Value
        local plr = game.Players.LocalPlayer
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.JumpPower = Value end
    end,
})

-- שמירה על הערכים גם אחרי Respawn
local plr = game.Players.LocalPlayer
plr.CharacterAdded:Connect(function(char)
    local hum = char:WaitForChild("Humanoid")
    hum.WalkSpeed = WalkSpeedValue
    hum.JumpPower = JumpPowerValue
end)
