local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Tutorial Script Hub",
    LoadingTitle = "Tutorial Script Hub",
    LoadingSubtitle = "by Rolo",
    Theme = "Ocean",
    ToggleUIKeybind = "K",
    ConfigurationSaving = {
       Enabled = true,
       FolderName = nil,
       FileName = "Big Hub"
    },
    Discord = {
       Enabled = false,
       Invite = "noinvitelink",
       RememberJoins = true
    },
    KeySystem = false
})

local PlayerTab = Window:CreateTab("Player", 4483362458) -- Title, Image
local PlayerSection = PlayerTab:CreateSection("Player Settings")

-- ערכי ברירת מחדל
local WalkSpeedValue = 16
local DashLengthValue = 50
local JumpHeightValue = 50

local plr = game.Players.LocalPlayer

-- Slider עבור WalkSpeed
PlayerSection:CreateSlider({
    Name = "WalkSpeed",
    Range = {16, 300}, -- טווח הגיוני למהלך
    Increment = 1,
    Suffix = "Speed",
    CurrentValue = WalkSpeedValue,
    Flag = "WalkSpeedSlider",
    Callback = function(Value)
        WalkSpeedValue = Value
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.WalkSpeed = Value end
    end
})

-- Slider עבור DashLength
PlayerSection:CreateSlider({
    Name = "Dash Length",
    Range = {10, 1000}, -- תלוי במכניקה של המשחק
    Increment = 1,
    Suffix = "Length",
    CurrentValue = DashLengthValue,
    Flag = "DashLengthSlider",
    Callback = function(Value)
        DashLengthValue = Value
        -- אם המשחק שלך משתמש ב-DashLength attribute, אפשר לשים כאן
        plr.Character:SetAttribute("DashLength", Value)
    end
})

-- Slider עבור JumpHeight
PlayerSection:CreateSlider({
    Name = "Jump Height",
    Range = {50, 500}, -- ערך התחלתי טוב
    Increment = 1,
    Suffix = "Height",
    CurrentValue = JumpHeightValue,
    Flag = "JumpHeightSlider",
    Callback = function(Value)
        JumpHeightValue = Value
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.JumpPower = Value end
    end
})

-- שמירה על הערכים אחרי Respawn
plr.CharacterAdded:Connect(function(char)
    local hum = char:WaitForChild("Humanoid")
    hum.WalkSpeed = WalkSpeedValue
    hum.JumpPower = JumpHeightValue
    -- אם אתה רוצה DashLength כאן, תלוי במכניקה של המשחק שלך
    char:SetAttribute("DashLength", DashLengthValue)
end)
